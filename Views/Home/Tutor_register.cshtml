
@{
    ViewBag.Title = "Tutor_register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/Tutor_register.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

</head>

<body>
    @{
        Html.RenderPartial("Header");
    }

    <div class="container register">
        <h2 class="text-center mt-5 mb-5">Tutor Register</h2>
        <div class="register-area">
            <form>
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        Choose your gender:
                    </div>
                    <div class="form-check form-check-inline pick">
                        <input class="form-check-input" type="radio" id="male" name="gender">
                        <label class="form-check-label" for="male"><i class="fas fa-male pr-2"></i>Male</label>
                    </div>
                    <div class="form-check form-check-inline pick">
                        <input class="form-check-input" type="radio" id="female" name="gender">
                        <label class="form-check-label" for="female"><i class="fas fa-female pr-2"></i>Female</label>
                    </div>
                </div>
                <select class="selectpicker" data-style="btn-dark" title="Choose institution">
                    <optgroup label="University">
                        <option>Buet</option>
                        <option>DU</option>
                        <option>AUST</option>
                    </optgroup>
                    <optgroup label="College">
                        <option>NDC</option>
                        <option>DC</option>
                        <option>VNC</option>
                    </optgroup>
                </select>
                <br> <br>
                <div class="form-group">
                    <label for="phone-number">Phone Number</label>
                    <input type="text" class="form-control" id="phone-number">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter E-Mail">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" class="form-control" id="confirm-password">
                </div>
                <select class="selectpicker" data-style="btn-dark" data-width="fit" multiple
                        title="Choose subject preference">
                    <option>Physics</option>
                    <option>Chemistry</option>
                    <option>Mathematics</option>
                    <option>ICT</option>
                    <option>English</option>
                    <option>Bengali</option>
                </select>
                <br> <br>
                <a class="register-button" href="@Url.Action("Tutor", "Home")">Register<i class="fas fa-check pl-2"></i></a>
                <!-- <button type="submit" class="register-button">Register<i class="fas fa-check pl-2"></i></button> -->
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    @{
        Html.RenderPartial("Footer");
    }
</body>

</html>

