    <section class="carousel">
        <div class="container-fluid p-0">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/images/slider/slider1.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Find Tutors</h2>
                            <p>A suitable tutor for your child.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/slider/slider2.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Lessen the Hassle</h2>
                            <p>No need to hassle for tutor.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/slider/slider3.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Specify Interest</h2>
                            <p>What you want to teach.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <section class="featured">
        <div class="container text-center">
            <h2 class="title">As featured in</h2>
            <div class="container newspaper">
                <div class="row">
                    <div class="col-md-3">
                        <img class="prothom-alo" src="~/Content/images/newspaper/prothom alo.png" alt="">
                    </div>
                    <div class="col-md-3"><img src="~/Content/images/newspaper/daily star.png" alt=""></div>
                    <div class="col-md-3"><img src="~/Content/images/newspaper/kalerkontho.png" alt=""></div>
                    <div class="col-md-3">
                        <img class="dhaka-tribune" src="~/Content/images/newspaper/dhakatribune.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="features">
        <div class="container">
            <div class="card-deck">
                <div class="card" data-aos="fade-right">
                    <div class="card-img">
                        <img src="~/Content/images/features/feature1.png" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Wide Choice</h5>
                        <p class="card-text">Choose a tutor according to your preference from wide choices.</p>
                    </div>
                </div>
                <div class="card" data-aos="zoom-in">
                    <div class="card-img">
                        <img src="~/Content/images/features/feature2.png" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Location Preferable</h5>
                        <p class="card-text">Choose specific location and see tuitions around that range.</p>
                    </div>
                </div>
                <div class="card" data-aos="fade-left">
                    <div class="card-img">
                        <img src="~/Content/images/features/feature3.png" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Subject Preferable</h5>
                        <p class="card-text">
                            Can choose tutor for specific subject and tutor can prefer the subject for
                            teaching.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="register">
        <div class="container home-page-register d-flex align-items-center justify-content-center">
            <div class="student-register" data-aos="flip-left">
                <div class="text-center mt-5 mb-5">
                    <p class="text-secondary">Join as a</p>
                    <h1 style="color: rgb(122, 163, 228);">STUDENT</h1>
                </div>
                <ul class="text-secondary">
                    <li>
                        Search for your preferable online and local tutors.
                    </li>
                    <br>
                    <li>
                        Communicate with any of our tutors for free.
                    </li>
                    <br>
                    <li>
                        See friend list.
                    </li>
                    <br>
                    <li>
                        Post a job for tutor vacancy.
                    </li>
                </ul>
                <div class="register-button mt-4">
                    <!-- <button class="home-page-register-button student-register-btn">REGISTER</button> -->
                    <a class="home-page-register-button student-register-btn" href="@Url.Action("Student_register", "Home")">REGISTER</a>
                </div>
            </div>
            <div class="tutor-register" data-aos="flip-right">
                <div class="text-center mt-5 mb-5">
                    <p>Join as a</p>
                    <h1>TUTOR</h1>
                </div>
                <ul>
                    <li>
                        Our website is completely free for tutors.
                    </li>
                    <br>
                    <li>
                        Create your own profile and advertise your services.
                    </li>
                    <br>
                    <li>
                        Search for tuition in job board.
                    </li>
                    <br>
                    <li>
                        See job invitations.
                    </li>
                </ul>
                <div class="register-button mt-4">
                    <!-- <button class="home-page-register-button tutor-register-btn">REGISTER</button> -->
                    <a class="home-page-register-button tutor-register-btn" href="@Url.Action("Tutor_register", "Home")">REGISTER</a>
                </div>
            </div>
        </div>
    </section>

